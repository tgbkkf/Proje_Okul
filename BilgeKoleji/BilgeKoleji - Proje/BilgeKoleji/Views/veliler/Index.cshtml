@model IEnumerable<BilgeKoleji.Models.veli>

@{
    ViewBag.Title = "Veli Index";
}

<div class="breadcrumbs ace-save-state" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="~/anasayfa/index">Anasayfa</a>
        </li>
        <li class="active">Veliler</li>
    </ul>
</div>

<div class="page-content">

    <div class="row">
        <div class="col-xs-12">

            <p>
                <a href="@Url.Action("Create", "veliler")" class="btn btn-info btn-xs btn-flat pull-right">Yeni Veli</a>
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.adSoyad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tcKimlik)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.evTelefonu)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isTelefonu)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.adres)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ilIlce)
                    </th>
                    <th>İşlemler</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.adSoyad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tcKimlik)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.evTelefonu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isTelefonu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.adres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ilIlce)
                        </td>
                        <td>
                            <a href="@Url.Action("edit","veliler",new { id = item.id })" title="Güncelle" class="btn btn-sm btn-flat btn-info pull-left"><i class="fa fa-edit"></i></a>
                            <a href="@Url.Action("delete","veliler", new { id = item.id })" onclick="return confirm('Veliyi silmek istiyor musunuz?')" title="Sil" class="btn btn-sm btn-flat btn-danger pull-left"><i class="fa fa-trash-o"></i></a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>