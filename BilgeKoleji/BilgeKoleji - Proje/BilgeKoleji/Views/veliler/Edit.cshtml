@model BilgeKoleji.Models.veli

@{
    ViewBag.Title = "Veli Düzenle";
}

<div class="breadcrumbs ace-save-state" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="~/anasayfa/index">Anasayfa</a>
        </li>
        <li>
            <a href="~/veliler/index">Veliler</a>
        </li>
        <li class="active">Veli Düzenle</li>
    </ul>
</div>

<div class="page-content">

    <div class="row">
        <div class="col-xs-12">


