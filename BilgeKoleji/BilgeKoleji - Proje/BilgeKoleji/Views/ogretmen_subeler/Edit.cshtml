@model BilgeKoleji.Models.ogretmen_sube

@{
    ViewBag.Title = "Edit";
}

<div class="breadcrumbs ace-save-state" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="~/anasayfa/index">Anasayfa</a>
        </li>
        <li>
            <a href="~/ogretmen_subeler/index">Öğretmen-Şubeler</a>
        </li>
        <li class="active">Öğretmen-Şube Düzenle</li>
    </ul>
</div>

<div class="page-content">

    <div class="row">
        <div class="col-xs-12">


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h5>Öğretmen-Şube Düzenle</h5>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.id)
                    @Html.HiddenFor(model => model.donem_id)
                    @Html.HiddenFor(model => model.silindiMi)


                    <div class="form-group">
                        @Html.LabelFor(model => model.ogretmen_id, "ogretmen_id", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("ogretmen_id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ogretmen_id, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.sube_id, "sube_id", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("sube_id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.sube_id, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Kaydet" class="btn btn-default btn-sm" />
                        </div>
                    </div>
                </div>
            }

            <a href="@Url.Action("index", "ogretmen_subeler")" class="btn btn-info btn-xs btn-flat pull-right">Geri Dön</a>

            <script src="~/Scripts/jquery-1.10.2.min.js"></script>
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        </div>
    </div>
</div>